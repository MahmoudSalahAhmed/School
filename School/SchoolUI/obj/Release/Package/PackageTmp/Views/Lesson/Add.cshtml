@using ViewModels
@model LessonEditViewModel



<br>
<br>
<div class="row">
    <a href="@Url.Action("Lesson", "Lesson")" class="editbtn"><i class="fa fa-chevron-left" style="margin-right: 20px;"></i>Back</a>
</div>
<br>
<div class="card-body">
    <h5 class="card-title" style="color:#980827">Add Record </h5>

    @using (Html.BeginForm("Add", "Lesson", FormMethod.Post))
    {
        <div class="form-row">
            <div class="col-md-4">
                <div class="position-relative form-group">
                    <label for="name">Name</label>
                    @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.Name)
                </div>
            </div>

        </div>

        <button type="submit" class="editbtn">Add</button>
    }

</div>

