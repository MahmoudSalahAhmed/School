@using ViewModels
@model IEnumerable<LessonViewModel>


<br><br>
<div class="row">
    @Html.ActionLink("Add Class", "Add", "Lesson", null, new { @class = "editbtn" })
</div>
<br>
<div class="card-body">
    <h5 class="card-title" style="color:#980827">Lesson</h5>

    <table class="mb-2 table table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LessonViewModel Lesson in Model)
            {
            <tr>
                <th scope="row">@Lesson.ID</th>
                <td>@Lesson.Name</td>
                <td>
                    <a href="@Url.Action("Update","Lesson", new { id = Lesson.ID })" class="fa fa-pencil"
                       aria-hidden="true" style="font-size:25px ; color :#17700f">
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete","Lesson", new { id = Lesson.ID })" class="fa fa-trash"
                       aria-hidden="true" style="font-size:25px ; color :#821d1d">
                    </a>
                </td>
            </tr>
            }

        </tbody>
    </table>

</div>




